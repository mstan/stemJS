<!DOCTYPE html>
<html lang="en">

    <head>

        <title><%= config.siteNavbar %> | Register</title>

        <%- include('./partials/header') %>


    </head>

    <body>

        <!-- Top content -->
        <div class="top-content">
          
            <div class="inner-bg">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2 text">
                            <h1><strong><%= config.siteName %> </strong> Registration Form</h1>
                            <div class="description">
                              <p>
                                    <!-- error message -->
                                    <% if (auth.locals.status == -1) { %>
                                         <div class="alert alert-danger">
                                            <strong>Error!</strong> <%= auth.locals.msg %>
                                        </div>                                   
                                    <% } %>                               
                                    <!-- end error message -->
                              </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3 form-box">
                          <div class="form-top">
                            <div class="form-top-left">
                              <h3>Setting up StemJS...</h3>
                                <p>Register using the form below!</p>
                            </div>
                            <div class="form-top-right">
                              <i class="fa fa-lock"></i>
                            </div>
                            </div>
                            <div class="form-bottom">
                          <form role="form" action="/auth/register" method="post" class="login-form">
                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Name</label>
                                        <input type="text" name="name" placeholder="First Name..." class="form-username form-control" id="form-username">
                                    </div>                                
                            <div class="form-group">
                              <label class="sr-only" for="form-username">Username</label>
                                <input type="text" name="email" placeholder="Email..." class="form-username form-control" id="form-username">
                              </div>
                              <div class="form-group">
                                <label class="sr-only" for="form-password">Password</label>
                                <input type="password" name="password" placeholder="Password..." class="form-password form-control" id="form-password">
                              </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-password">Password</label>
                                        <input type="password" name="passwordCheck" placeholder="Password (Again)" class="form-password form-control" id="form-password">
                                    </div>                                    
                              <button type="submit" class="btn">Register!</button>
                          </form>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>


        <%- include('./partials/javascript') %>

    </body>

</html>