<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= config.siteNavbar %> | Secondary Sidebar</title>
    <!-- Stylesheets -->
    <%- include('./partials/styling.ejs') %>
    <!-- End Stylesheeting -->
</head>

<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->

            <!-- Top Menu Items -->
            <%- include('./partials/navbar.ejs') %>
            <!-- End Top Menu Items -->
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <%- include('./partials/sidebar') %>
            <!-- /.navbar-collapse -->
        </nav>
        <!-- End Navigation -->

        <div id="page-wrapper">
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Edit Secondary Sidebar
                        </h1>
                    </div><!-- col-lg 12 -->
                </div><!-- /.row -->
                <!-- End Page Heading -->

<!-- Begin Page Content -->
                <form role="form" action="/admin/navigation/sidebarSecondary" method="POST">

                <% sidebarSecondarySections.forEach (function (sidebarSecondarySection) { %>
                <div class="col-lg-12 table table-bordered"><!-- Contain all subsets -->
                    <!-- Header -->                
                    <div class="col-lg-12">
                        <div class="col-lg-3">
                             <label><small>Header</small></label>
                             <input class="hidden" name="id" value="<%= sidebarSecondarySection.id %>" readonly >
                             <input class="form-control" name="name" placeholder="Name" value="<%= sidebarSecondarySection.name %>">
                        </div>
                    </div><!-- end col-lg-12 -->      
                    <!-- End Header -->

                    <!-- Links -->
                    <div class="col-lg-12" style="padding-bottom:50px">
                        <div class="col-lg-8">   
                            <textarea class="form-control" placeholder="URL" rows="1" name="URL"><%= sidebarSecondarySection.URL %></textarea>
                        </div>
                    </div><!-- end col-lg-12 -->                          
                    <!-- End Links -->

                    <!-- Priority -->
                    <div class="col-lg-12" style="padding-bottom:50px">
                         <div class="col-lg-1">
                             <label><small>Priority</small></label>
                            <input class="form-control" name="priority" value="<%= sidebarSecondarySection.priority %>">
                         </div>                       
                    </div><!-- end col-lg-12 -->
                    <!-- End Priority -->            
                           
                </div><!-- end contain all subsets -->        
                <% }); %><!-- end footerSections.forEach -->
  
                    <!-- submit button -->
                    <div class="col-lg-12">
                        <input type="submit" value="Update">
                    </div><!-- col-lg 12 -->
                    <!-- end submit button -->
                                   



                </form><!-- end -->                   
            

            </div><!-- /container-fluid -->
 <!-- End Page Content -->

        </div><!-- /#pager-wrapper -->
    </div><!-- /#wrapper -->

    <!-- JS -->
    <%- include('./partials/javascript.ejs') %>
    <!-- End JS -->

</body>
</html>
