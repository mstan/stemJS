<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= config.siteNavbar %> | Primary Sidebar</title>
    <!-- Stylesheets -->
    <%- include('./partials/styling.ejs') %>
    <!-- End Stylesheeting -->
</head>

<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Top Menu -->
            <%- include('./partials/navbar.ejs') %>
            <!-- Sidebar-->
            <%- include('./partials/sidebar') %>
        </nav>
        <!-- End Navigation -->


        <div id="page-wrapper">
            <div class="container-fluid">

                <!-- Edit Primary Sidebar Header -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Edit Primary Sidebar
                        </h1>
                    </div>
                </div>
                <!-- End Edit Primary Sidebar Header -->

                <!-- Edit Primary Sidebar -->

                <!-- Edit Primary Sidebar Form -->
                <form role="form" action="/admin/navigation/sidebarPrimary" method="POST">

                    <!-- Run a for each for each entry -->
                    <% sidebarPrimarySections.forEach (function (sidebarPrimarySection) { %>
                    <div class="col-lg-12 table table-bordered"><!-- For each entry -->
                        <!-- Header -->                
                        <div class="col-lg-12">
                            <div class="col-lg-3">
                                 <label><small>Header</small></label>
                                 <input class="hidden" name="id" value="<%= sidebarPrimarySection.id %>" readonly >
                                 <input class="form-control" name="header" placeholder="Header|URL" value="<%= sidebarPrimarySection.header %>">
                            </div>
                        </div>  
                        <!-- End Header -->

                        <!-- Links -->
                        <div class="col-lg-12" style="padding-bottom:50px">
                            <div class="col-lg-8">   
                                <textarea class="form-control" placeholder="NAME|URL;NAME|URL;...NAME|URL" rows="1" name="links"><%= sidebarPrimarySection.links %></textarea>
                            </div>
                        </div>                        
                        <!-- End Links -->

                        <!-- Priority -->
                        <div class="col-lg-12">
                             <div class="col-lg-1">
                                <label><small>Priority</small></label>
                                <input class="form-control" name="priority" value="<%= sidebarPrimarySection.priority %>">
                             </div>                       
                        </div>
                        <!-- End Priority -->    

                        <!-- Delete -->
                        <div class="col-lg-12" style="padding-bottom:50px" align="right">
                            <a class="btn btn-sm btn-danger" href="/admin/navigation/sidebarPrimary/delete/<%= sidebarPrimarySection.id %>">Delete</a>  
                        </div>
                        <!-- End Delete -->
                             
                               
                    </div><!-- End for each entry -->        
                    <% }); %>
                    <!-- End footerSections.forEach -->
      
                        <!-- submit button -->
                        <div class="col-lg-12" align="center" style="padding-bottom:50px">
                            <input class="btn btn-lg btn-success" type="submit" value="Update">
                        </div>
                        <!-- end submit button -->
                                   
                </form><!-- Edit Primary Sidebar Form -->   


                <!-- Add new -->

                <!-- Add New Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Add New
                        </h1>
                    </div>
                </div>
                <!-- End Add New Heading -->                

                <form role="form" action="/admin/navigation/sidebarPrimary/add" method="POST">
                    <div class="col-lg-12 table table-bordered">
                        <!-- Header -->                
                        <div class="col-lg-12">
                            <div class="col-lg-3">
                                 <label><small>Header</small></label>
                                 <input class="form-control" name="header" placeholder="Header|URL">
                            </div>
                        </div>    
                        <!-- End Header -->

                        <!-- Links -->
                        <div class="col-lg-12" style="padding-bottom:50px">
                            <div class="col-lg-8">   
                                <textarea class="form-control" placeholder="NAME|URL;NAME|URL;...NAME|URL" rows="1" name="links"></textarea>
                            </div>
                        </div>                        
                        <!-- End Links -->

                        <!-- Priority -->
                        <div class="col-lg-12" style="padding-bottom:50px">
                             <div class="col-lg-1">
                                 <label><small>Priority</small></label>
                                <input class="form-control" name="priority" placeholder="0">
                             </div>                       
                        </div>
                        <!-- End Priority -->  

                    </div><!-- end table-bordered -->

                    <!-- submit button -->
                    <div class="col-lg-12" align="center">
                        <input class="btn btn-lg btn-success"  type="submit" value="Add New">
                    </div>
                    <!-- end submit button -->                
                </form>                
            

            </div><!-- /container-fluid -->
        </div><!-- /#page-wrapper -->
    </div><!-- /#wrapper -->


    <!-- JS -->
    <%- include('./partials/javascript.ejs') %>
    <!-- End JS -->

</body>
</html>
