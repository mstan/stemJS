<!DOCTYPE html>
<html lang="en">

<head>
    <title><%= config.siteNavbar %> | Page Management</title>

    <!-- Stylesheets -->
    <%- include('./partials/styling.ejs') %>
    <!-- End Stylesheeting -->

</head>

<body>
    <div id="wrapper">
<!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->

            <!-- Top Menu Items -->
            <%- include('./partials/navbar.ejs') %>

            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <%- include('./partials/sidebar') %>
        </nav>
<!-- End Navigation -->

        <div id="page-wrapper">
            <div class="container-fluid">

<!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Page Management <small>View, Modify, and Delete Webpages</small>
                        </h1>
                    </div><!-- col-lg 12 -->
                </div><!-- /.row -->
<!-- -- End Page Heading -->

<!-- Begin Page Content -->
                <div class="col-lg-12">
                    <h2>Pages Index</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                        <!-- Header. Describe Each Row -->
                            <thead>
                                <tr>
                                    <th>Page</th>
                                    <th>Handler</th>
                                    <th>Last Modified</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                        <!-- Each Row. Pull from pagesBySlug -->
                            <tbody>
                                <!-- for each row function -->
                                <% pagesBySlug.forEach( function (pageBySlug) { %>
                                <tr>
                                    <!-- each row defined by slug -->
                                    <td> 
                                        <%= pageBySlug.slug %>
                                    </td>

                                    <!-- View or Edit -->
                                    <td>
                                        <a class="btn btn-sm btn-primary" target="_blank" href="/pages/<%= pageBySlug.slug %>">View</a>
                                        <a class="btn btn-sm btn-warning" href="pages/edit/<%= pageBySlug.slug %>">Edit</a>
                                    </td>

                                    <!-- Last Modified -->
                                    <td>12-12-15</td>
                                        <td><a class="btn btn-sm btn-danger" href="pages/delete/<%= pageBySlug.slug %>">Delete</a></td><!-- Delete -->
                                    </tr>
                                <% }); %><!--end pagesBySlug.forEach -->

                            </tbody>
                        </table>
                    </div>
                </div>
            </div><!-- /container-fluid -->
 <!-- End Page Content -->

        </div><!-- /page-wrapper -->
    </div><!-- /wrapper -->

    <!-- JS -->
    <%- include('./partials/javascript.ejs') %>
    <!-- End JS -->

</body>

</html>
